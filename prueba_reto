import random


class Player :   #creacion de jugador
    
    Score=0
    def __init__(self, nombre):
       self.nombre=nombre
    
    def Change_name(self,Newname): #funcion para modificar el nombre
        self.nombre=Newname
        return self.nombre

    
    def Change_score(self,score):
        self.Score=score
        return self.Score


